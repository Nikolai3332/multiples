internal class Program
{
    private static void Main(string[] args)
    {
        int randonNumberN;
        int sumResult = 0;
        int minRandomNumberRage = 1;
        int maxRandomNumberRage = 27;
        int maxThreeDigitNumber = 100;

        Random random = new Random();
        randonNumberN = random.Next(minRandomNumberRage, maxRandomNumberRage + 1);
        Console.WriteLine($"Случайное сгенерированное числ N = {randonNumberN}.");

        for (int i = 0; i <= maxThreeDigitNumber; i += randonNumberN)
        {
            sumResult++;
        }

        Console.WriteLine($"Сумма чисел кратных {randonNumberN} = {sumResult}.");
        Console.ReadKey();
    }
}
